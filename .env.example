# Database Configuration
# Replace with PostgreSQL connection string
DB_URL="postgresql://username:password@localhost:5432/note_god_db"

# Supabase Configuration (for Authentication)
# Get these from Supabase project settings
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key_here"

# OpenAI API Configuration (via OpenRouter)
# Get API key from OpenRouter or OpenAI
OPENAI_API_KEY="your_openrouter_or_openai_api_key_here"

# Application URL (for password reset emails and redirects)
# Use http://localhost:3000 for development
NEXT_PUBLIC_URL="http://localhost:3000"

# Redis Configuration (for BullMQ)
REDIS_HOST="localhost" # Change to 'redis' if using Docker Compose
REDIS_PORT="6379"
REDIS_PASSWORD="your_redis_password_here"

# Gemini API Key (if using Gemini models)
GEMINI_API_KEY="your_gemini_api_key_here"

# Qdrant Vector Database URL
QDRANT_URL="http://localhost:6333"
# If using Docker Compose, set QDRANT_URL to http://qdrant:6333