{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "module": "nodenext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "@db/*": ["../db/dist/*"]
    },
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["*.ts", "services/**/*.ts", "app.ts", "index.ts"],
  "exclude": ["node_modules", "dist", "../db"]
}
